# ============================================================
# ARES-7 v73 FULL - Environment Variables Template
# ============================================================
# 이 파일을 .env로 복사하고 실제 값을 입력하세요
# cp .env.template .env
# ============================================================

# ========== 운영 모드 ==========
ENV=production          # production, vps, paper

# ========== KIS (한국투자증권) - 실전 계좌 ==========
KIS_APP_KEY_REAL=your_real_app_key_here
KIS_APP_SECRET_REAL=your_real_app_secret_here
KIS_ACCOUNT_REAL=12345678-01
KIS_CANO_REAL=12345678
KIS_ACNT_PRDT_CD_REAL=01

# ========== KIS (한국투자증권) - 모의투자 계좌 ==========
KIS_APP_KEY_VPS=your_vps_app_key_here
KIS_APP_SECRET_VPS=your_vps_app_secret_here
KIS_ACCOUNT_VPS=12345678-01
KIS_CANO_VPS=12345678
KIS_ACNT_PRDT_CD_VPS=01

# ========== KIS 거래 설정 ==========
KIS_MARKET=US           # US or KR
KIS_EXCHANGE=NASD       # NASD, NYSE, AMEX (US) / KOSPI, KOSDAQ (KR)

# ========== IBKR (Interactive Brokers) ==========
IBKR_ENABLED=false      # true or false
IBKR_HOST=127.0.0.1
IBKR_PORT=7497          # 7497 (paper), 7496 (live)
IBKR_CLIENT_ID=1

# ========== 브로커 라우팅 ==========
BROKER_ROUTE_US=kis     # kis or ibkr
BROKER_ROUTE_KR=kis     # kis only
BROKER_ROUTE_DEFAULT=kis

# ========== 알파 데이터 소스 ==========
# SqueezeMetrics (DIX/GEX)
SQUEEZEMETRICS_API_KEY=your_squeezemetrics_api_key

# WhisperZ
WHISPERZ_API_KEY=your_whisperz_api_key

# Yahoo Finance (무료)
# 별도 API 키 불필요

# ========== LLM APIs ==========
# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini (optional)
GEMINI_API_KEY=your_gemini_api_key

# ========== 알림 (Telegram) ==========
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ========== 데이터베이스 (optional) ==========
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ares7
POSTGRES_USER=ares7_user
POSTGRES_PASSWORD=your_postgres_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ========== 모니터링 ==========
# Prometheus
PROMETHEUS_PORT=9090

# Grafana (optional)
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# ========== 시스템 설정 ==========
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=./logs

# 초기 자본
INITIAL_CAPITAL=1000000

# 최대 포지션 수
MAX_POSITIONS=10

# 최소 주문 금액 ($)
MIN_ORDER_VALUE=1000

# ========== 리스크 관리 ==========
# 최대 포트폴리오 레버리지
MAX_LEVERAGE=2.0

# 최대 단일 포지션 비중 (%)
MAX_POSITION_PCT=10.0

# 일일 최대 손실 한도 (%)
DAILY_LOSS_LIMIT=5.0

# 드로다운 긴급 정지 임계값 (%)
DRAWDOWN_KILL_SWITCH=15.0

# ========== 백테스트 설정 ==========
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_SYMBOLS=SPY,QQQ,IWM

# ========== 실거래 설정 ==========
LIVE_SYMBOLS=SPY,QQQ
LIVE_INTERVAL=60        # 실행 간격 (초)

# ========== 기타 ==========
# 타임존
TIMEZONE=America/New_York

# 시장 시간 (ET)
MARKET_OPEN=09:30
MARKET_CLOSE=16:00

# 사전 시장 거래 활성화
PRE_MARKET_ENABLED=false
POST_MARKET_ENABLED=false
